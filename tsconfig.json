{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "esnext",
    "allowJs": true,
    "checkJs": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": false,
    "jsx": "react",
    "resolveJsonModule": true,
    "outDir": "./docs",
    "sourceMap": true,
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ],
    "lib": [
      "esnext",
      "dom"
    ]
  },
  "include": [
    "src/*.ts",
  ],
  "exclude": [
    "node_modules",
    "dist",
    "lib",
    "lib-amd",
    "docs",
    "webpack.config.js"
  ],
  "ts-node": {
    "files": true
  }
}
